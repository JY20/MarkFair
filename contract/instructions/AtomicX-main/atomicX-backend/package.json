{
  "name": "atomicx-backend",
  "version": "0.1.0",
  "description": "Backend service for atomic swaps between EVM chains and StarkNet",
  "main": "dist/index.js",
  "scripts": {
    "init": "node init.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "maker:create": "node dist/orders/createOrder.js",
    "taker:fill": "node dist/orders/fillOrder.js",
    "maker:escrow": "node dist/evm/createEscrow.js",
    "taker:fund": "node dist/starknet/fundHTLC.js",
    "maker:claim": "node dist/starknet/claimStarknet.js",
    "taker:claim": "node dist/evm/claimEVM.js",
    "reverse:create": "node dist/reverse/createReverseOrder.js",
    "reverse:maker:htlc": "node dist/reverse/createStarknetHTLC.js",
    "reverse:maker:fund": "node dist/reverse/fundStarknetHTLC.js",
    "reverse:taker:escrow": "node dist/reverse/createEVMEscrow.js",
    "reverse:maker:claim": "node dist/reverse/claimEVM.js",
    "reverse:taker:claim": "node dist/reverse/claimStarknet.js",
    "debug:timelock": "node dist/evm/checkTimelock.js",
    "setup:env": "node src/scripts/setup-env.js",
    "deploy:ethereum": "hardhat run src/scripts/deploy-ethereum.ts --network sepolia",
    "deploy:1inch": "hardhat run src/scripts/deploy-1inch.ts --network sepolia",
    "deploy:integration": "hardhat run src/scripts/deploy-integration.ts --network sepolia"
  },
  "keywords": [
    "atomic-swap",
    "bitcoin",
    "ethereum",
    "blockchain",
    "htlc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@1inch/limit-order-protocol": "^2.0.5",
    "@1inch/limit-order-sdk": "^4.9.5-rc.0",
    "@1inch/limit-order-settlement": "^3.1.0",
    "@1inch/solidity-utils": "^6.6.0",
    "@nomiclabs/hardhat-docker": "^2.0.2",
    "@openzeppelin/contracts": "^4.9.6",
    "@types/node": "^16.11.12",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.0",
    "ethers": "^5.7.2",
    "get-starknet": "^3.0.1",
    "hardhat": "^2.12.7",
    "starknet": "^5.19.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@playmint/hardhat-starknet-compile": "^1.0.3",
    "@shardlabs/starknet-hardhat-plugin": "^0.8.0-alpha.5",
    "typescript": "^4.9.5"
  }
}
